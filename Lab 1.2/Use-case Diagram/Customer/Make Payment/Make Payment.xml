@startuml
left to right direction
skinparam packageStyle rectangle

actor Customer as C
rectangle "Customer Make Payment" {
  usecase (Select Payment Method) as UC1
  usecase (Provide Payment Details) as UC2
  usecase (Confirm Payment) as UC3
  usecase (Receive Payment Confirmation) as UC4
}

C --> UC1 : Selects Payment Method
UC1 --> UC2 : Provides Payment Details
UC2 --> UC3 : Confirms Payment
UC3 --> UC4 : Receives Payment Confirmation
@enduml
