@startuml
actor User as U
rectangle "User Sign-Up" {
  usecase (Provide Details) as UC1
  usecase (Validate Details) as UC2
  usecase (Create Account) as UC3
}

U --> UC1 : Provides Sign-Up Details
UC1 --> UC2 : Submits Details
UC2 --> UC3 : Validates Details
UC3 --> U : Creates Account

@enduml